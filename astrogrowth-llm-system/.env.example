# ============================================
# AstroGrowth - Production Environment Config
# ============================================

# -----------------
# DATABASE
# -----------------
DATABASE_URL=mysql://user:password@localhost:3306/astrogrowth

# -----------------
# REDIS (Cache + Pub/Sub + Rate Limiting)
# -----------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------
# LLM PROVIDERS
# -----------------

# OpenRouter (Primary - Multi-model Hub)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hugging Face (Secondary - FREE Fallback)
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Ollama (Tertiary - Local Emergency)
OLLAMA_URL=http://localhost:11434

# -----------------
# IMAGE GENERATION
# -----------------

# Fal.ai (Imagen 3, FLUX)
FAL_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# -----------------
# LEAD SCRAPING & ENRICHMENT
# -----------------

# PhantomBuster (LinkedIn, Google Maps scraping)
PHANTOMBUSTER_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hunter.io (Email finding - FREE tier: 25/month)
HUNTER_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clearbit (Company enrichment - OPTIONAL)
CLEARBIT_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Apollo.io (B2B lead data - FREE tier: 50 credits/month)
APOLLO_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------
# SOCIAL MEDIA APIs
# -----------------

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=xxxxxxxxxxxxxxxxxx
LINKEDIN_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LINKEDIN_REDIRECT_URI=https://yourdomain.com/api/auth/linkedin/callback

# Instagram (via Meta/Facebook)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Buffer (FREE social media scheduling)
BUFFER_ACCESS_TOKEN=

# -----------------
# SECURITY & ENCRYPTION
# -----------------

# Encryption key for OAuth tokens (min 32 chars)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-char-min-encryption-key-change-in-production

# Owner OpenID (admin user)
OWNER_OPEN_ID=

# -----------------
# MONITORING & LOGGING
# -----------------

# Sentry (Error tracking - FREE tier: 5k events/month)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# Log level
LOG_LEVEL=info

# -----------------
# APPLICATION
# -----------------

# Environment
NODE_ENV=production

# Server port
PORT=3000

# Application URL
APP_URL=https://yourdomain.com

# -----------------
# EMAIL (OPTIONAL)
# -----------------

# SendGrid / Resend / etc
EMAIL_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# -----------------
# FEATURE FLAGS
# -----------------

# Enable semantic caching (recommended: true)
ENABLE_SEMANTIC_CACHE=true

# Enable circuit breaker (recommended: true)
ENABLE_CIRCUIT_BREAKER=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Circuit breaker failure threshold (default: 5)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Circuit breaker timeout in ms (default: 60000 = 1 minute)
CIRCUIT_BREAKER_TIMEOUT=60000

# -----------------
# RATE LIMITING
# -----------------

# LinkedIn rate limits
LINKEDIN_MAX_POSTS_PER_DAY=100
LINKEDIN_MIN_POST_INTERVAL_MS=900000

# API rate limits
API_MAX_REQUESTS_PER_HOUR=1000

# -----------------
# n8n INTEGRATION (OPTIONAL)
# -----------------
N8N_WEBHOOK_URL=http://n8n:5678/webhook
N8N_API_KEY=

# -----------------
# DEVELOPMENT ONLY
# -----------------

# Skip authentication (dev only)
SKIP_AUTH=false

# Mock LLM responses (testing)
MOCK_LLM=false

# Verbose logging
DEBUG=false
